<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="200"
        x:Class="DotNetMqtt.Avalonia.App.MainWindow"
        Width="600"
        Height="200"
        FontSize = "30"
        Title="DotNetMqtt.Avalonia.App">

  <Grid RowDefinitions="Auto,Auto,Auto,Auto"
        ColumnDefinitions="Auto,Auto">
     
    <!-- Título -->
    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
               Text="Monitor de Temperatura y Humedad" 
               HorizontalAlignment="Center" FontWeight="Bold"/>

    <!-- Etiquetas y campos para la temperatura -->
    <TextBlock Grid.Row="1" Grid.Column="0" Text="Temperatura:" Margin="10"/>
    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TemperaturaLabel" Text="N/A" Margin="10"/>

    <!-- Etiquetas y campos para la humedad -->
    <TextBlock Grid.Row="2" Grid.Column="0" Text="Humedad:" Margin="10"/>
    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="HumedadLabel" Text="N/A" Margin="10"/>
    
    <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
               Text="Presione el botón para iniciar la conexión" 
               HorizontalAlignment="Center" FontWeight="Bold" Margin="10"/>

  </Grid>
</Window>
